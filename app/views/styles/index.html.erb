<h2>Listing styles</h2>

<p id="notice"><%= notice %></p>

<p>Number of styles: <%= @styles.count %></p>

<table>
  <thead>
  <tr>
    <th>Name</th>
  </tr>
  </thead>

  <tbody>
  <% @styles.each do |style| %>
      <tr>
        <td><%= link_to style.name, style %></td>
        <td><%= link_to('Edit', edit_style_path(style)) if current_user %></td>
        <td><%= link_to('Destroy', style, method: :delete, data: { confirm: 'Are you sure?' }) if current_user %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to('New style', new_style_path) if current_user %>