<p id="notice"><%= notice %></p>

<h2><%= @brewery.name %></h2>

<p>
  <i>Established year <%= @brewery.year %></i>
</p>

<p>Number of beers: <%= @brewery.beers.count %></p>

<p>
  <ul>
  <% @brewery.beers.each do |beer| %>
    <li><%= link_to beer.name, beer %></li>
  <% end %>
  </ul>
</p>

<p>
  Beers of the brewery have <%= pluralize(@brewery.ratings.count, 'rating') %>, average <%= @brewery.average_rating %>
</p>

<% if current_user %>
    <%= link_to 'Edit', edit_brewery_path(@brewery), :class => 'btn btn-warning' %> |
    <%= link_to 'Destroy', @brewery, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %> |
<% end %>
<%= link_to 'Back', breweries_path, :class => 'btn btn-primary' %>
