<p id="notice"><%= notice %></p>

<h2><%= @beer.name %></h2>

<p>
  <strong>Style:</strong>
  <%= @beer.style.name %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<p>
  <% if @beer.ratings.empty? %>
    Beer has not been rated yet!
  <% else %>
    Beer has <%= pluralize(@beer.ratings.count, 'rating') %>, average <%= @beer.average_rating %>
  <% end %>
</p>

<h4>Rate beer:</h4>

<%= form_for(@rating) do |f| %>
    <%= f.hidden_field :beer_id %>
    Score: <%= f.number_field :score %>

    <%= f.submit %>
<% end %>

<br>

<% if current_user %>
    <%= link_to 'Edit', edit_beer_path(@beer), :class => 'btn btn-warning' %> |
    <%= link_to 'Destroy', @beer, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %> |
<% end %>
<%= link_to 'Back', beers_path, :class => 'btn btn-primary' %>
